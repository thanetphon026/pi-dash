[Unit]
Description=Pi-Dash FastAPI
After=network.target

[Service]
WorkingDirectory=/home/pi/pi-dash
Environment=PYTHONUNBUFFERED=1
ExecStart=/home/pi/pi-dash/.venv/bin/python -m uvicorn app.main:app --host 0.0.0.0 --port 8080 --workers 1
Restart=always
User=pi

[Install]
WantedBy=multi-user.target
